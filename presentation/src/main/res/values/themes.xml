<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tripBook_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="ProfileLabelStyle">
        <item name="android:textSize">@dimen/profile_label_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/tripBook_main</item>
        <item name="colorControlNormal">@color/editText_focusOut</item>
        <item name="android:textColorHighlight">@color/tripBook_main_transparent</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="ButtonSolidStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_solid</item>
<!--        버튼 레이아웃-->
<!--        <item name="android:layout_marginLeft">@dimen/profile_button_horizontal</item>-->
<!--        <item name="android:layout_marginRight">@dimen/profile_button_horizontal</item>-->
<!--        <item name="android:layout_marginBottom">@dimen/profile_button_bottom</item>-->
    </style>

    <style name="ButtonOutlineStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_outline</item>
    </style>


</resources>
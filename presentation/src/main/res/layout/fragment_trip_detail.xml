<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tripbook.tripbook.viewmodel.ArticleViewModel" />

    </data>


    <!--전체 ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--메인 및 내용-->
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mainImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:imgUri="@{viewModel.thumbnail}"
                        app:layout_collapseMode="parallax" />

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:visibility="visible"
                        app:layout_collapseMode="pin">

                        <!--이전에 툴바 아래 아이콘이 스크롤 내렸을 때 안 보였던 이유
                        : app:layout_collapseMode=""scroll|exitUntilCollapsed" 때문
                        : 툴바는 pin 으로 고정하기 -->

                        <!--enterAlways : 위로 스크롤 사라지고 아래쪽 스크롤 나타남 O -->

                        <ImageView
                            android:id="@+id/icn_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="12dp"
                            app:tint="@color/white"
                            android:paddingStart="@dimen/margin_start"
                            android:src="@drawable/icn_before_24" />

                        <ImageView
                            android:id="@+id/icn_main_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/white"
                            android:layout_marginLeft="316dp"
                            android:paddingVertical="12dp"
                            android:src="@drawable/icn_more_default_24" />


                    </androidx.appcompat.widget.Toolbar>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="96dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mainImageView">

                        <!-- 상단 닉네임과 제목 -->
                        <ImageView
                            android:id="@+id/profileImageView"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:imgUri="@{viewModel.profileUri}"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/nicknameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@id/profileImageView"
                            android:text="@{viewModel.nickname}"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/titleTextView"
                            android:layout_width="320dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="20dp"
                            android:text="@{viewModel.title}"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:visibility="visible" />
                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!--사이드 프로필-->
            <LinearLayout
                android:id="@+id/side_profile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/gray_G_0"
                android:visibility="gone"
                app:layout_anchor="@id/webView"
                app:layout_anchorGravity="top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/webView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <ImageView
                    android:id="@+id/side_profileImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="277dp"
                    app:imgUri="@{viewModel.profileUri}" />

                <TextView
                    android:id="@+id/side_nicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/side_profileImage"
                    android:text="@{viewModel.nickname}"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 본문 내용 -->
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/side_profile"
                app:layout_constraintBottom_toTopOf="@id/trip_detail_bottom"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


            <!--하단 바-->
            <LinearLayout
                android:id="@+id/trip_detail_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_anchor="@id/webView"
                app:layout_anchorGravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/webView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/trip_detail_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <!--좋아요-->
                    <LinearLayout
                        android:id="@+id/trip_detail_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icn_like_24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/like_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:gravity="center"
                            android:text='@{viewModel.heartNum != null ? String.valueOf(viewModel.heartNum) : ""}'
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/like" />

                    </LinearLayout>

                    <!--댓글 (추후 추가 ) -->
                    <!--  <LinearLayout
                          android:id="@+id/trip_detail_comment"
                          android:layout_width="0dp"

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <include app:graph = "@navigation/profile"/>
    <include app:graph = "@navigation/nav_info"/>
    <include app:graph = "@navigation/nav_detail"/>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tripbook.tripbook.views.login.LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_profile"
            app:destination="@id/profile" />
        <action
            android:id="@+id/action_loginFragment_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

</navigation>
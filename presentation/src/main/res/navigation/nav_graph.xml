<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <include app:graph = "@navigation/profile"/>
    <include app:graph = "@navigation/travel_news"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tripbook.tripbook.views.login.LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_profile"
            app:destination="@id/profile" />
        <action
            android:id="@+id/action_loginFragment_to_travel"
            app:destination="@id/travel_news"/>
    </fragment>

    <fragment
        android:id="@+id/errorFragment"
        android:name="com.tripbook.tripbook.views.error.ErrorFragment">
        <argument
            android:name="errorText"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_errorFragment"
        app:destination="@id/errorFragment" />

</navigation>